{
    "name": "shado/php-resource-pool",
    "description": "A PHP library providing resource pooling support, commonly used as a database connection pool.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Shado\\ResourcePool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shado\\Tests\\ResourcePool\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Jarosław 'Shado' Żak"
        }
    ],
    "require": {
        "php": ">=8.1",
        "react/event-loop": "^1.5",
        "react/promise": "^3.2",
        "react/async": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.3"
    }
}
